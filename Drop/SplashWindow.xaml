<Window Width="400" Height="400" xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashWindow">
  <UserControl xmlns="https://github.com/avaloniaui"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
      <TextBlock TextAlignment="Center" FontSize="50" >Hello!</TextBlock>
      <TextBlock TextAlignment="Center">Other users will see you as this:</TextBlock>
      <TextBlock TextAlignment="Center">(You can drag and drop a picture to the picture box to replace it!)</TextBlock>
      <Image DragDrop.AllowDrop="True" Name="pic"></Image>
      <TextBox Name="usern">Username</TextBox>
      <Button Name="done">Done</Button>
    </StackPanel>
  </UserControl>
</Window>